<!--sections/show-->
<div id="section_show">
  <div id="section_show_header">
    <%= render :partial => "sections/partials/section_show_header", :locals => { :section => @section, :on_back => false } %>
  </div>
	<%= show_free_space_if_active("#{@section.name}TopArea") %>
	
  <hr>
  <div id="section_content">
    <% @articles.each do |article| %>
      <%= render :partial => "articles/partials/article_preview", :locals => { :article => article } %>
    <% end %>

    <%= will_paginate @articles %>

  </div>
</div>

<% content_for :left_sidebar do %>
	<%= show_free_space_if_active("#{@section.name}LeftSidebar") %>
<% end %>

<% content_for :right_sidebar do %>
	<%= show_free_space_if_active("#{@section.name}RightSidebar") %>
<% end %>