<!--admin/pages/index-->
<div id="page_index">
	<div id="page_new_area">
		<%= link_to "New Page", new_admin_page_path, :class => "button right" %>
	</div>

  <h3>All Pages</h3>

	<p>Drag left or right to change the order.  Create a new page at the right.</p>
	<ul id="page_list">
		<% @pages.each do |page| %>
			<%= content_tag_for :li, page do %>
				<span class="handle pointer small">[drag]</span><br>
				<%= link_to page.title, page, :class=>"no_line" %>
			<% end %>
		<% end %>
	</ul>
 	<%= sortable_element 'page_list', :url => sort_admin_pages_path, :constraint => :horizontal,
 												:handle => 'handle' %>

  <ul id="page_controls">
    <% @pages.each do |page| %>
      <%= content_tag_for :li, page do %>
        <ul class="page_row_in_index">
          <li><%= page.title %></li>
          <li><%= link_to 'Edit', edit_admin_page_path(page) %></li>
        </ul>
      <% end %>
    <% end %>
  </ul>
</div>

