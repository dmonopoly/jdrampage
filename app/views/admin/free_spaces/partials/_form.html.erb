<%= form_for [:admin, free_space] do |f| %>
  <% if free_space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(free_space.errors.count, "error") %> prohibited this free space from being saved:</h2>

      <ul>
      <% free_space.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= free_space.notes %>
  </p>
  <p>
    <%= f.label :content %><br>
