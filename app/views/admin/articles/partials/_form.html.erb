<!--assumes article and button_value variables-->
<%= form_for [:admin, article], :html=>{ :multipart => true } do |f| %>
	<%= f.error_messages %>
	<p class="right">
		<label>Upload photo: </label>
		<%= f.file_field :photo %><br>
		<%= image_tag article.photo.url(:thumb), :class=>"article_image" %>
	</p>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title, :style=>"width: 340px" %><br><br>
		<%= f.label :author %><br>
		<%= f.text_field :author, :style=>"width: 340px" %> e.g. Joe Miller and Sue Erickson<br>
		<%= f.label :date %>
		<%= f.date_select :date, :order => [ :month, :day, :year ] %>
	</p>

	<label>Section this article belongs to: </label>
	<%= collection_select :article, :section_id, Section.all, :id, :name, { :prompt => "[Select section]" } %>

  <p>
    <%= f.label :teaser %><br>
    <%= f.text_field :teaser, :style=>"width: 400px" %>
  </p>
  <p class='right'>
    <%= f.label :credits %> - <i>be sure to use the correct format (i.e. include the "By")</i><br>
    <%= f.text_area :credits %>
  </p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<br>

	<p>
		<%= f.submit button_value %>
	</p>
<% end %>

