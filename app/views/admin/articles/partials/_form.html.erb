<!--assumes article and button_value variables-->
<%= form_for [:admin, article], :html=>{ :multipart => true } do |f| %>
	<%= f.error_messages %>
	<p class="right">
  	<%= image_tag article.photo.url(:thumb), :class=>"article_image" %>
		<label>Upload photo: </label>
		<%= f.file_field :photo %>
	</p>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %><br><br>
		<%= f.label :author %>
		<%= f.text_field :author %><br>
		<%= f.label :date %>
		<%= f.date_select :date, :order => [ :month, :day, :year ] %>
	</p>

	<label>Section this article belongs to: </label>
	<%= collection_select :article, :section_id, Section.all, :id, :name, { :prompt => "[Select section]" } %>

  <p>
    <%= f.label :teaser %>
    <%= f.text_field :teaser %>
  </p>
  <p class='right'>
    <i>Format:</i><br>
    To be done.
  </p>
  <p class='right'>
    <%= f.label :credits %><br>
    <%= f.text_area :credits, :size => "10x10"  %> <!--why won't this work? need to use css? what's the point of size, then?-->
  </p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<br>

	<p>
		<%= f.submit button_value %>
	</p>
<% end %>

