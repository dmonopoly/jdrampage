<!--admin/articles/index-->
<div id="article_index">
	<div id="article_new_area">
		<%= link_to "New Article", new_admin_article_path, :class => "button right" %>
	</div>

  <h3>All Articles</h3>

	<ul id="article_list">
		<li>
			<ul id="article_list_headers">
				<li class="article_position">#</li>
				<li class="article_title">Article Title</li>
				<li class="article_author">Author</li>
				<li class="article_section">Section</li>
				<li class="article_date">Date</li>
				<li class="article_controls">Controls</li>
			</ul>
		</li>
		<% @articles.each do |article| %>
			<%= content_tag_for :li, article, :class => "sortable" do %>
				<ul class="items_within_article">
					<%= render :partial => 'admin/articles/partials/article', :locals => { :article => article } %>
				</ul>
			<% end %>
		<% end %>
	</ul>

	<%= will_paginate @articles %>

	<% unless current_user.role == "poster" %><!--confining ability to sort-->
		<p class="small">
			Please do not use the drag feature if you are on a page other than 1. Functionality is still in development.
		</p>
		<%= sortable_element("article_list", :url => sort_admin_articles_path,
												:only => "sortable", :handle => "handle" ) %>
	<% end %>
</div>

