<!--admin/users/edit-->
<div id="user_edit">
	<%= form_for [:admin, @user] do |f| %>
		<p>
			<%= f.label :login %><br>
			<%= f.text_field :login, :disabled => 'disabled' %> <!--or pass :readOnly => 'readOnly'-->
			<!--Modification of this is disabled.-->
		</p>
		<p>
			<%= f.label :full_name, "Full Name" %><br>
			<%= f.text_field :full_name %>
		</p>
		<p>
			<%= f.label :email %><br>
			<%= f.text_field :email %>
		</p>
		
		<p><a href="javascript:void(0)" id='change_pw_area_trigger' class='no_line small'>Change password >></a></p>
		<div id='change_pw_area' style='display:none'>
			<p>
				<%= f.label :password %><br>
				<%= f.password_field :password %>
			</p>
			<p>
				<%= f.label :password_confirmation %><br>
				<%= f.password_field :password_confirmation %>
			</p>
		</div>
		
		<p>
			<%= f.submit "Update" %>
		</p>
	<% end %>
</div>

<div id="directions">
	<%= link_to "<< Back", admin_users_path %>
</div>