<!--static/staff-->
<h2 id="title">
  Meet the RamPage Staff
  <% if logged_in? %>
  <div class="right">
	  <%= link_to 'Edit', edit_admin_user_path(current_user), :class=>"small" %>
	  <%= link_to "<<", admin_users_path, :class=>"small" %>
	</div>
<% end %>
</h2>

<% @users.each do |user| %>

<div class="staff_member">
	<div class="member_name">
		<%= user.full_name %>
	</div>

	<div class="member_photo">
		<%= image_tag user.photo.url(:thumb) %>
	</div>

	<div class="member_bio">
		<%= simple_format user.bio %>
	</div>
</div>

<% end %>