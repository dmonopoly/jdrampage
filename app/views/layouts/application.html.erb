<!DOCTYPE html>
<html>
<head>
  <title>JD Rampage - The JDHS Student Newspaper</title>
  <%= stylesheet_link_tag :all %>
	
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
	<%= image_tag "rampage_banner.png" %>
	<ul id="sections_list">
		<% for section in Section.all(:order => "position") %>
		<li><%= section.name %></li>
		<% end %>
	</ul>
	<% if current_user %>
		<div id="login_area">
			Logged in as <b><%= current_user.login %></b> |
			<%= link_to 'Frontside', '/', :style=>"text-decoration:underline" %> | 
			<%= link_to 'Backside', '/backside' %> | 
			<%= link_to 'Logout', '/logout' %>
		</div>
	<% end %>
</div>

<div class="container">
	<div class="span-4 colborder">
	
	</div>
	<div class="span-15 colborder">
		<%= yield %>
	</div>
	<div class="span-5 last">
	
	</div>
</div>
	
<div id="footer">

</div>

<div id="login_form">

</div>

</body>
</html>